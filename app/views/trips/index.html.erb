<div class="wrapper">
  <div class="polygon">
    <div class="container">
      <div class="row">
        <div class="new-search col-md-12 col-md-offset-2">
          <div class="headline">
            <h1>Here is what we have found for <span id="you">you</span>!</h1>
          </div>
          <% @trips.each do |trip| %>
          <p>
            <%= trip.destination.d_city %>
            <%= trip.itinerarys %>
          </p>
          <% end %>

          <div class="results">
            <% 3.times do %>
            <div class="card-trip">
              <div class="card-photo" style="background-image: linear-gradient(-225deg, rgba(200,101,80,0.6) 0%, rgba(13, 9, 16, 0.72) 50%), url(<%= image_path "Amsterdam.jpg" %>)">
                <h2>Amsterdam</h2>
              </div>
              <div class="card-trip-infos">
                <h2>199â‚¬ pp</h2>
              </div>
            </div>
            <% end %>
          </div>

          <div id="map" style="width: 100%; height: 300px; "data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY']%>"></div>

    </div>
  </div>
</div>

