
<div class="wrapper">
  <div class="polygon">
  <div class="container">
    <div class="row">
      <div class="new-search col-md-12 col-md-offset-2">
        <div class="headline">
          <h1>Here is what we have found for <span id="you" >you</span>!</h1>
        </div>

         <%#@trips.each_with_index do |trip, index| %>
           <%#= trip.destination.d_city %>
           <!-- (<%#= trip.destination.dap_code %>) -->
           <%# trip.itineraries.each do |i| %>
             <%#= eval(i.info)[0][0][:price].to_f%>
             <br>
           <%# end %>
           <br>
           <% @coordinates %>

          <%# end %>
          <div class="results">
            <% @destinations.each do |destination| %>
            <div class="card-trip">
            <div class="card-photo" style="background-image: linear-gradient(-225deg, rgba(200,101,80,0.6) 0%, rgba(13, 9, 16, 0.72) 50%), url(<%= image_path "city-Amsterdam.jpg" %>);">
              <%= link_to destination[:city], search_trip_path(destination.id)  %>

              </div>
              <div class="card-trip-infos">
                <h4><%= destination[:ppp].round %>â‚¬</h4>
              </div>
            </div>
             <% end %>
          </div>

          <div id="map" style="width: 100%; height: 300px; "data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY']%>"></div>

    </div>
  </div>
</div>

