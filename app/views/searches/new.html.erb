
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="new-search col-md-8 col-md-offset-2">
        <h1>Joyage</h1>
        <div class="simple-form-for">
          <%= simple_form_for @search do |s| %>
          <div class="input-form">
            <div class="origins">
              <%= s.input :origin, label: "Hometown", placeholder: "Enter starting point" %>
              <button id="add-origin">+</button>
            </div>
            <div class="dates">
              <%= s.input :dep_date, as: :string, label: "Date from", required: false, input_html: {class: "datepicker"} %>
              <%= s.input :ret_date, as: :string,  label: "Date to" required: false, input_html: {class: "datepicker"} %>
            </div>
            <%= s.input :max_budget, label: "Your maximum budget" %>
          </div>
            <%= s.submit "Get results", class: "create-trip" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
